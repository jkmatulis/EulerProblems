public class Problem 2 {

   static int a = 2;
   static int total =0;
   
    
    public static void main(String[] args) {
        for (int i=1; i<=4000000; i = i) {
           int c = a + i;
           i = a;
           a = c;
           
           if (i%2==0) {
              total = total + i; 
           }
           
           System.out.println(i);
        }
        
        System.out.println(total);
    }
    
}
