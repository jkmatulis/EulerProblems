/*
2520 is the smallest number that can be divided 
by each of the numbers from 1 to 10 without any remainder.
What is the smallest positive number that is evenly divisible 
by all of the numbers from 1 to 20?
*/
public class Problem5 {

    private static int spn; //smallest positive number that is evenly divisible by numbers 1-20
    
    public static void multiply () {
        boolean check = true;//if the value stays false then the number is divisible by the number 1-20
        boolean stop = true;
        for (int i=2520; stop; i++) { //starts at 20, and generates numbers until spn is found
            for (int s=1; s<=20; s++) { //test if a number is div by 1-20
                 if (i%s!=0) { //checks reamainder to if i is div by s
                    check = false;} //If one number in the set is false then it cant be assigned to spn
            }
        if (check==true) {spn=i; stop=false;};
        check=true;   
        }
    }
    
    public static void main (String[] args) {
        multiply();
        System.out.println(spn);
        }
    }
    
 //49sec run time
