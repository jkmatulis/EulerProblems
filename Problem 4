public class Problem4 {

    static int rev;
    static int largePal;
    
    //method for reversing number
    public static void reverse (int number) {
        int reverse = 0;
        while ( number != 0 ){
          reverse = reverse * 10;
          reverse = reverse + number%10;
          number = number/10;
        }
      rev=reverse;
    }
    //methos for multiplying large sets of numbers in a particular order
    public static void multiply (int palNum) {
        for (int i=1; i<=palNum; i++) {
          for (int s=1; s<=palNum; s++) {
          int temp = i * s;
          reverse (temp);
          if (temp==rev && rev>largePal) {
              largePal=rev;
              break;
          }
          }
        }
    }
 
    public static void main(String[] args) {
         multiply(999);
         System.out.println(largePal); 
    }
}
